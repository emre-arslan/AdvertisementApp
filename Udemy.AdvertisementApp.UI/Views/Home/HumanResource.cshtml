@model List<AdvertisementListDto>


@{
    Layout = "_Layout";
}

<div class="container my-3" style="margin-top:100px!important;">

    <div class="accordion" id="accordionExample">
        @{
            bool firstRow = true;
        }
        @foreach (var item in Model)
        {

            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@item.Id">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.Id" aria-expanded="(@firstRow)" aria-controls="collapse-@item.Id">
                        @item.Title
                    </button>
                </h2>
                <div id="collapse-@item.Id" class="accordion-collapse collapse @(firstRow?"show":"")" aria-labelledby="heading-@item.Id" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <strong class="float-xl-end">@item.CreatedDate.ToString("dd-MM-yyyy HH:mm")</strong><br /><hr>
                        @item.Description
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div>
                                <a href="#">Başvur</a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light text-center">
                                Başvuru için kayıt olmanız gerekmektedir.
                                <a href="#">Kayıt Ol</a>
                            </div>
                        }

                    </div>
                </div>
            </div>
            if (firstRow)
            {
                firstRow = false;
            }
        }


    </div>
</div>
