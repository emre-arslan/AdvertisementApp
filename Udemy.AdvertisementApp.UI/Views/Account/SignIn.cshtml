@model AppUserLoginDto
@{
    Layout = "_Layout";
}

<div style="margin-top:100px;">
    <form asp-action="SignIn" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">

        <div class="mb-3">
            <label>Kullanıcı Adı:</label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Şifreniz:</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for="@Model.RememberMe">
                <label class="form-check-label" for="flexCheckDefault">
                    Beni Hatırla
                </label>
            </div>
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </div>

        <div class="text-danger text-center" asp-validation-summary="All">
        </div>
    </form>
</div>
